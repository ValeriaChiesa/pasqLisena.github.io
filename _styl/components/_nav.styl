// main: ../main.styl


nav
  position relative
  z-index 10
  text-align center
  padding .4em
  li
    display inline-block
    margin 0 2em
    font-size 1rem
    a
      text-transform uppercase
      color alpha(#fff, .8)
      font-weight 100
      padding .5em
      display inline-block
      &.mdi
        font-size 0
        &::before
          font-size 1rem
      &:hover
        color #fff
        text-decoration none
    &.current
      a
        color #fff
        border-bottom 2px solid accent
