// main: ../main.styl


nav
  position relative
  z-index 10
  text-align center
  padding .4em
  li
    display inline-block
    margin 0 1.4em
    font-size 1rem
    +below('s')
      margin 0 .3em
    a
      text-transform uppercase
      color alpha(#fff, .8)
      font-weight 100
      padding .5rem .5rem .1rem
      display inline-block
      &.mdi
        font-size 0
        &::before
          font-size 1.3rem
      &:hover
        color #fff
        text-decoration none
    &.current
      a
        color #fff
        border-bottom 2px solid accent
